{
  "compilerOptions": {
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "src",

    "target": "es2021",
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "module": "commonjs",
    "moduleResolution": "bundler",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src", "src/types"]
}
