{
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "paths": { "*": ["src/*"] },

    "target": "es2021",
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "module": "commonjs",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src", "src/types"]
}
